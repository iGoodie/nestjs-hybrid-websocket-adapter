{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "declaration": true,
    "importHelpers": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./lib",
    "baseUrl": "./",
    "noLib": false
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules"]
}